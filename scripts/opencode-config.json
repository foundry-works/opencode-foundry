{
  "description": "OpenCode configuration for foundry-mcp plugin",
  "version": "1.0.0",
  "experimental": {
    "mcp_timeout": 600000
  },
  "permission": {
    "skill": {
      "*": "allow"
    },
    "mcp__plugin_foundry_foundry-mcp__*": "allow",
    "bash": {
      "git status*": "allow",
      "git diff*": "allow",
      "git log*": "allow",
      "git rev-parse*": "allow",
      "git branch*": "allow",
      "git show*": "allow",
      "pytest*": "allow",
      "python -m pytest*": "allow",
      "foundry-mcp*": "allow",
      "foundry-cli*": "allow",
      "codex*": "allow",
      "claude*": "allow",
      "gemini*": "allow",
      "cursor-agent*": "allow",
      "opencode*": "allow"
    },
    "edit": {
      "**/specs/pending/**": "allow",
      "**/specs/active/**": "allow",
      "**/specs/completed/**": "allow",
      "**/specs/archived/**": "allow"
    },
    "read": {
      "**/specs/**/*.json": "deny",
      "*": "allow"
    },
    "lsp": "allow"
  }
}
